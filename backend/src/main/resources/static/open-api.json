{
  "openapi": "3.0.0",
  "info": {
    "title": "NITCONF",
    "description": "Web app tailored for conference program committees, enabling reviewer assignments, schedule creation, and final decision-making on paper acceptance. Features include role-based access for program committees and organized tracks for various topics.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "Localhost"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Returns details of all registered users",
        "operationId": "findAll",
        "responses": {
          "200": {
            "description": "All the users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/findByUsername": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "findByUsername",
        "description": "Return the details of the user with the given username",
        "operationId": "findByUsername",
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/papers": {
      "get": {
        "tags": [
          "Papers"
        ],
        "summary": "findAll",
        "description": "Return the list of all papers",
        "operationId": "findAll_1",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Paper"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/papers/findByStatus": {
      "get": {
        "tags": [
          "Papers"
        ],
        "summary": "findByStatus",
        "description": "Returns the list of all papers with the given status",
        "operationId": "findByStatus",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Paper"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/papers/findById": {
      "get": {
        "tags": [
          "Papers"
        ],
        "summary": "findById",
        "description": "Returns the paper with the given ID",
        "operationId": "findById",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Paper"
                }
              }
            }
          }
        }
      }
    },
    "/papers/findByAuthor": {
      "get": {
        "tags": [
          "Papers"
        ],
        "summary": "findByAuthor",
        "description": "Returns the list of all papers submitted by the author with given authorId",
        "operationId": "findByAuthor",
        "parameters": [
          {
            "name": "authorId",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Paper"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/paper/accept": {
      "post": {
        "tags": [
          "Papers"
        ],
        "description": "Change the status of paper with given paperId to ACCEPTED",
        "operationId": "acceptPaper",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/paper/reject": {
      "post": {
        "tags": [
          "Papers"
        ],
        "description": "Change the status of paper with given paperId to REJECTED",
        "operationId": "rejectPaper",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/review": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "Returns details of all reviews",
        "operationId": "findAllReviews",
        "responses": {
          "200": {
            "description": "All the reviews",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Review"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/review/findByPaper": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "Returns details of all reviews of a paper with given paperId",
        "operationId": "findReviewsByPaper",
        "parameters": [
          {
            "name": "paperId",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "All the reviews of the given paper",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Review"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/review/findByReviewer": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "Returns details of all reviews of a paper given by the reviewer with the given id",
        "operationId": "findReviewsByReviewer",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "All the reviews given by the reviewer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Review"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/review/findByAssignee": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "Returns details of all reviews of a paper assigned by the program committee member with the given id",
        "operationId": "findReviewsByAssignee",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "All the reviews assigned by the program committee member",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Review"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Role"
            }
          },
          "tracks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Track"
            }
          }
        }
      },
      "Paper": {
        "type": "object",
        "properties": {
          "paperId": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "author": {
            "$ref": "#/components/schemas/User"
          },
          "tracks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Track"
            }
          }
        }
      },
      "Review": {
        "type": "object",
        "properties": {
          "reviewId": {
            "type": "integer",
            "format": "int64"
          },
          "paper": {
            "$ref": "#/components/schemas/Paper"
          },
          "author": {
            "$ref": "#/components/schemas/User"
          },
          "reviewDescription": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "assignedBy": {
            "$ref": "#/components/schemas/User"
          },
          "deadline": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Track": {
        "type": "object",
        "properties": {
          "trackId": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}